<?xml version="1.0"?>
<layout version="0.1.0">
  <default>
    <reference name="top.links">
            <action method="addLink" translate="label title">
                <label>Store Locator</label>
                <url>igex_storelocator</url>
                <title>Store Locator</title>
                <prepare>true</prepare>
                <urlParams/>
                <position>6</position>
            </action>
        </reference>
